{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "add-shebang.js"],
  "exclude": ["node_modules", "dist"]
}
